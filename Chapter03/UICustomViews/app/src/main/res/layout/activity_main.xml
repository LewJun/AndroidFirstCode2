<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.uicustomviews.MainActivity">

    <!--<include layout="@layout/title" />-->

    <com.example.uicustomviews.customview.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Main"
        app:titleColor="#ffff00" />

    <com.example.uicustomviews.customview.BorderRelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:needTopBorder="false"
        app:borderColor="@color/colorAccent"
        app:borderStrokeWidth="3.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />
    </com.example.uicustomviews.customview.BorderRelativeLayout>

    <com.example.uicustomviews.customview.BorderRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:needTopBorder="false"
        app:borderColor="@color/colorAccent"
        app:borderStrokeWidth="3.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />
    </com.example.uicustomviews.customview.BorderRelativeLayout>
</LinearLayout>
