<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:padding="@dimen/d4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d4"
            android:background="@drawable/bg_selector_edit"
            android:text="@string/app_name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d4"
            android:background="@drawable/bg_selector_edit"
            android:text="@string/app_name" />

        <Button
            android:id="@+id/btn_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d4"
            android:text="默认按钮"
            android:background="@drawable/bg_btn_selector"
            android:textColor="@color/text_btn_selector" />

        <Button
            android:id="@+id/btn_disable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d4"
            android:text="不可用按钮"
            android:enabled="false"
            android:background="@drawable/bg_btn_selector"
            android:textColor="@color/text_btn_selector" />

        <Button
            android:id="@+id/btn_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d4"
            android:text="未选中"
            android:onClick="btnSelected"
            android:background="@drawable/bg_btn_selector"
            android:textColor="@color/text_btn_selector" />

        <Button
            android:id="@+id/btn_activate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d4"
            android:text="未激活"
            android:onClick="btnActivate"
            android:background="@drawable/bg_btn_selector"
            android:textColor="@color/text_btn_selector" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</ScrollView>

