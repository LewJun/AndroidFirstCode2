<?xml version="1.0" encoding="utf-8"?>
<!--使用shape可以自定义形状，通过android:shape属性指定-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--
    设置形状填充的颜色
    -->
    <solid android:color="@color/colorPrimary" />

    <!--padding设置内边距-->
    <padding
        android:bottom="@dimen/d16"
        android:left="@dimen/d16"
        android:right="@dimen/d16"
        android:top="@dimen/d16" />

    <!--
    设置所有圆角为4dp
    然后设置左上角和右下角为16dp
    -->
    <corners
        android:radius="@dimen/d4"
        android:bottomRightRadius="@dimen/d16"
        android:topLeftRadius="@dimen/d16" />

    <!--
    stroke          设置描边
    color           设置描边颜色
    width           设置描边的宽度
    dashWidth       设置虚线长度为16dp
    dashGap         设置虚线之间的距离为4dp
    -->
    <stroke
        android:color="@color/colorAccent"
        android:width="@dimen/d4"
        android:dashWidth="@dimen/d16"
        android:dashGap="@dimen/d4"
        />
</shape>